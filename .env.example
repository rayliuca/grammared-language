# Environment variables configuration example
# Copy to .env and fill in your values (DO NOT commit .env file)

# API Service Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
LOG_LEVEL=INFO

# Triton Server Configuration
TRITON_HOST=triton-server
TRITON_PORT=8001
TRITON_PROTOCOL=grpc

# Model Configuration
ERROR_DETECTION_MODEL=bert_error_detection
ERROR_DETECTION_VERSION=1
CORRECTION_MODEL=llm_correction
CORRECTION_VERSION=1

# Limits
MAX_TEXT_LENGTH=10000
REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=100

# Security (CHANGE THESE IN PRODUCTION)
REQUIRE_API_KEY=false
API_KEYS=dev-key-1,dev-key-2
SECRET_KEY=change-this-to-a-random-secret-key

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# Development
DEBUG=false
